<h1>Список ПО организации</h1>

<!-- Контейнер с поиском и сортировкой -->
<div class="filters-container" style="margin-bottom: 20px; padding: 10px; border: 1px solid #ddd; border-radius: 5px; background-color: #f9f9f9;">
  
  <!-- Форма поиска -->
  <%= form_with url: pos_path, method: :get, local: true do %>
    <div class="search-container" style="display: flex; gap: 10px; align-items: center;">
      <input type="text" name="search" placeholder="Поиск по имени ПО" value="<%= params[:search] %>" class="search-input" />
      <input type="text" name="release_date" placeholder="Поиск по дате выпуска" value="<%= params[:release_date] %>" class="search-input" />
      
      <%= submit_tag "Поиск", class: "button-style" %>
      <%= link_to 'Сбросить', pos_path, class: 'button-style reset-button' %>
  

    </div>
  <% end %>

  <!-- Форма сортировки -->
  <%= form_with url: pos_path, method: :get, local: true do %>
    <div class="sort-container" style="margin-top: 10px; display: flex; gap: 10px; align-items: center;">
      <label for="sort_by">Сортировать по:</label>
      <%= select_tag :sort_by, options_for_select([
        ['ID', 'id'],
        ['Версия', 'vers_po'],
        ['Дата выпуска', 'data_vypuska_po'],
        ['Стоимость в год', 'stoimost_v_god_po']
      ], selected: params[:sort_by]), class: "search-input" %>

      <label for="sort_order">Направление:</label>
      <%= select_tag :sort_order, options_for_select([
        ['По возрастанию', 'asc'],
        ['По убыванию', 'desc']
      ], selected: params[:sort_order]), class: "search-input" %>

      <%= submit_tag "Применить сортировку", class: "button-style" %>
    </div>
  <% end %>

</div>
<table border="1" cellpadding="10" cellspacing="0" style="width: 100%; text-align: left; border-collapse: collapse;">
  <thead>
    <tr style="background-color: #f2f2f2;">
      <th>ID</th>
      <th>Название</th>
      <th>Версия</th>
      <th>Дата выпуска</th>
      <th>Стоимость в год, ₽</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @pos.each do |po| %>
      <tr>
        <td><%= po.id %></td>
        <td><%= po.name_po %></td>
        <td><%= po.vers_po %></td>
        <td><%= po.data_vypuska_po %></td>
        <td><%= po.stoimost_v_god_po %></td>
        <td>
            <div style="display: inline-flex; align-items: center; gap: 2px;">
              <%= link_to 'Показать', po, style: "margin-right: 5px;" %>
              <%= link_to 'Редактировать', edit_po_path(po), style: "margin-right: 5px;" %>
              <%= button_to "Удалить", po, method: :delete, data: { confirm: "Вы уверены?" }, class: "delete-button" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if flash[:notice] %>
  <p id="flash-message" style="color: green;"><%= flash[:notice] %></p>
  
  <script>
    // Автоматическое скрытие сообщения через 3 секунды
    setTimeout(function() {
      document.getElementById('flash-message').style.display = 'none';
    }, 3000);  // 3000 миллисекунд = 3 секунды
  </script>
<% end %>

<div style="margin-bottom: 20px;">

  <%= link_to 'Добавить ПО', new_po_path, style: "display: inline-block; margin-top: 20px; padding: 10px 15px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;" %>

  <%= link_to 'Назад', root_path, style: "display: inline-block; margin-top: 20px; padding: 10px 15px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;" %>
</div>


